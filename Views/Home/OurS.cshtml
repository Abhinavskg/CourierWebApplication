@{
    ViewData["Title"] = "Our Services";
}

<style>
    /* Style for the background image */
    body {
        background-image: url('/img/n3.jpg'); /* Adjust the path to your background image */
        background-size: cover;
        background-position: center;
        background-attachment: fixed; /* Ensures the background image remains fixed while scrolling */
        color: #fff; /* Set text color to white for better contrast */
    }

    /* Style for the content */
    .container {
        padding-top: 0px; /* Add some top padding to the content to prevent it from being overlapped by the navbar */
    }

    /* Adjust the styling of the content based on your design preferences */
    .service-item {
        background-color: rgba(0, 0, 0, 0.5); /* Add a semi-transparent background color to improve readability */
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    /* Style headings and paragraphs */
    h1, h3 {
        color: #fff; /* Set heading text color to white */
    }
</style>

<div class="container">
    <h1 class="mt-4">Our Services</h1>
    <hr>

    <div class="row">
        <div class="col-md-4">
            <div class="service-item">
                <h3>Delivery Management</h3>
                <p>Efficiently manage all aspects of your delivery process, including tracking, scheduling, and routing.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="service-item">
                <h3>Customer Management</h3>
                <p>Streamline customer interactions and manage customer information, preferences, and orders.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="service-item">
                <h3>Inventory Management</h3>
                <p>Keep track of your inventory in real-time, ensuring accurate stock levels and efficient order fulfillment.</p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="service-item">
                <h3>Route Optimization</h3>
                <p>Optimize delivery routes to minimize time and fuel costs, improving overall efficiency.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="service-item">
                <h3>Item Tracking</h3>
                <p>Track individual items throughout the delivery process, providing transparency and accountability.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="service-item">
                <h3>Reporting and Analytics</h3>
                <p>Gain insights into your delivery operations with comprehensive reporting and analytics tools.</p>
            </div>
        </div>
    </div>
</div>
